{
  "expo": {
    "name": "TreeTracker",
    "slug": "tree-tracker-2025",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anthonycrisp.treetracker"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.anthonycrisp.treetracker"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "treetracker",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "experiments": {
      "typedRoutes": true
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We need location to tag trees at their base."
        }
      ]
    ]
  }
}